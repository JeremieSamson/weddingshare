{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <div class="row" id="voter">
        <div class="col-lg-12">
            {% if category.medias|length == 0 %}
                <div class="alert alert-danger">Il n'y a pas encore de photos dans cette cat√©gorie</div>
            {% else %}
                <h2 class="page-header">{{ category.name }}</h2>

                {% for media in category.medias %}
                    <div class="col-lg-4">
                        <a href="">
                            <img src="{{ app.request.getSchemeAndHttpHost() ~ media.path }}" width="400px">
                        </a>
                        par {{ media.author }}
                    </div>
                {% endfor %}
            {% endif %}

            <br>
        </div>

        <div class="col-lg-12">
            <a href="{{ path('index') }}">Revenir a la page d'accueil</a>
        </div>
    </div>
{% endblock %}