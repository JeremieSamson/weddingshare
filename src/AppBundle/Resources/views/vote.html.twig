<!-- Portfolio Section -->
<div class="row" id="voter">
    <div class="col-lg-12">
        <h2 class="page-header">Voter</h2>
    </div>

    {% for category in categories %}
        <div class="col-md-4 col-sm-6">
            <a href="{{ path('vote_new', {'id' : category.id}) }}">
                <img class="img-responsive img-portfolio img-hover" width="350" src="{{ asset('bundles/app/images/' ~ category.imagePath) }}" alt="">
                <h1 style="position:absolute; top:100px; left:20px;"> {{ category.name }} </h1>
            </a>
        </div>
    {% endfor %}
</div>
<!-- /.row -->